<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_starter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:textAlignment="center"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="@string/starter"
                app:titleTextColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/button_add_student"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="144dp"
                android:background="@drawable/button_starter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_starter"
                app:srcCompat="@drawable/ic_baseline_group_add_24" />

            <ImageButton
                android:id="@+id/button_add_course"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_starter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_add_student"
                app:srcCompat="@drawable/ic_baseline_library_books_24" />

            <ImageButton
                android:id="@+id/button_login_student"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_starter"
                app:layout_constraintStart_toEndOf="@+id/button_add_course"
                app:layout_constraintTop_toBottomOf="@+id/button_add_student"
                app:srcCompat="@drawable/ic_baseline_account_box_24" />

            <ImageButton
                android:id="@+id/button_add_lecturer"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="144dp"
                android:background="@drawable/button_starter"
                app:layout_constraintStart_toEndOf="@+id/button_add_student"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_starter"
                app:srcCompat="@drawable/ic_baseline_person_add_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>